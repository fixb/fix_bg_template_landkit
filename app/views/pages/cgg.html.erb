              <div class="row gx-0 justify-content-end">
                <div class="col-12 col-md-6">

                  <!-- Body -->
                  <a class="card-body" href="#!">

                    <!-- Heading -->
                    <h3>
                      Background Photo + Gradient Overlay.
                    </h3>

                    <!-- Text -->
                    <p class="mb-0 text-white-80">
                      <div>
                    <canvas id="myChartCggPnl"></canvas>
                  </div>
                    </p>

                  </a>

                  <!-- Meta -->
                  <a class="card-meta" href="#!">

                    <!-- Divider -->
                    <hr class="card-meta-divider bg-white-20">

                    <!-- Avatar -->
                    <div class="avatar avatar-sm me-2">
                      <%= image_tag("avatars/avatar-fix.jpg", class: "avatar-img rounded-circle") %>
                    </div>

                    <!-- Author -->
                    <h6 class="text-uppercase text-white-80 me-2 mb-0">
                      François-Xavier Baud
                    </h6>

                    <!-- Date -->
                    <p class="h6 text-uppercase text-white-80 mb-0 ms-auto">
