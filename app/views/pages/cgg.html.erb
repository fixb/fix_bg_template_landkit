                  <a class="card-meta" href="#!">

                    <!-- Divider -->
                    <hr class="card-meta-divider bg-white-20">

                    <!-- Avatar -->
                    <div class="avatar avatar-sm me-2">
                      <%= image_tag("avatars/avatar-1.jpg", class: "avatar-img rounded-circle") %>
                    </div>

