        <div class="row">
          <div class="col-12">

            <!-- Heading -->
            <h2 class="mb-0">
              Context.
            </h2>

            <!--  -->
            <p class="mb-5 text-muted">
              Time ahead of the peak.
            </p>

          </div>
        </div> <!-- / .row -->
        <div class="row">
          <div class="col-12">

            <!-- Card -->
            <div class="card card-row shadow-light-lg mb-6">
              <div class="row gx-0">
                <div class="col-12">

                  <!-- Badge -->
                  <span class="badge rounded-pill bg-gray-600 badge-float badge-float-outside">
                    <span class="h6 text-uppercase">Featured</span>
                  </span>

                </div>
                  <a class="col-12 col-md-6 order-md-2 bg-cover card-img-end">

                  <!-- Image (placeholder) -->
                  <canvas id="myChartpriceCl"></canvas>


                  <!-- Shape -->
                  <div class="shape shape-start shape-fluid-y svg-shim text-white d-none d-md-block">
                  </div>

                </a>
                <div class="col-12 col-md-6 order-md-1">

                  <!-- Body -->
                  <a class="card-body" href="#!">

                    <!-- Heading -->
                    <h3>
                      Oil barrel went fron 124$ to 34$ in 18 mths.
                    </h3>

                    <!-- Text -->
                    <p class="mb-0 text-muted">
                      Geopolitical, US shale oil sector and over-capacity with a sense of cold war
                    </p>

                  </a>

                  <!-- Meta -->
                  <a class="card-meta" href="#!">

                    <!-- Divider -->
                    <hr class="card-meta-divider">

                    <!-- Avatar -->
                    <div class="avatar avatar-sm me-2">
                      <%= image_tag("avatars/avatar-fix.jpg", class: "avatar-img rounded-circle") %>
                    </div>

                    <!-- Author -->
                    <h6 class="text-uppercase text-muted me-2 mb-0">
                      François-Xavier Baud
                    </h6>

                    <!-- Date -->
                    <p class="h6 text-uppercase text-muted mb-0 ms-auto">
                      <time datetime="2019-05-31">May 31</time>
                    </p>

                  </a>

                </div>

              </div> <!-- / .row -->
            </div>

            <!-- Card -->
            <div class="card card-row shadow-light-lg mb-6">
              <div class="row gx-0">
                <div class="col-12">

                  <!-- Badge -->
                  <span class="badge rounded-pill bg-gray-600 badge-float badge-float-outside">
                    <span class="h6 text-uppercase">Featured</span>
