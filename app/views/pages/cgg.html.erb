<section class="pt-4 pt-md-11">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-12 col-md-5 order-md-2">

            <!-- Image -->
            <%= image_tag("photos/logo_CGG.png", class: "img-fluid mb-6 mb-md-0") %>

          </div>
          <div class="col-12 col-md-7 order-md-1">

            <!-- Heading -->
            <h1 class="display-4">
              A full cross-asset cycle <br>
              <span class="text-primary">into a distressed sector.</span>
            </h1>

            <!-- Text -->
            <p class="lead text-muted mb-0">
              How to change the path of the company within a tough environment and a shift from the Oil capex cycle.
            </p>

          </div>
        </div> <!-- / .row -->
      </div> <!-- / .container -->
    </section>

    <!-- ARTICLES -->
